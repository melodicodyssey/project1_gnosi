<h1> <%=@title%> </h1>
<center>
<div class="container">
	<div class="row">
		<!-- Add streams to column -->
		<% i = 0 %>
		<% @streams.each do |stream| %>
			<div class="stream col-lg-3 col-md-4 col-sm-6 col-xs-12">
				<div class="title_input">
				
				<!-- + button to open modal -->
				<button class="btn btn-primary btn-sm plus" data-toggle="modal" data-target="#myModal<%=i%>">+</button>
				<h3><%= link_to stream['title'], stream['alternate'][0]['href'], :target => '_blank' %></h3>

				<!-- Modal -->
				<div class="modal fade" id="myModal<%=i%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				  <div class="modal-dialog">
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				        <h4 class="modal-title" id="myModalLabel">Your Thoughts</h4>
				      </div>
				      <div class="modal-body">
				      	<div class="input">
				      	<%= form_for @link do |f| %>
				      		<%= f.text_field :title, value: stream['title'] %></br>
				      		<%= f.text_field :url, value: stream['alternate'][0]['href'] %></br>
 						</div>
						  <%= f.text_area :comments %>
						  <%= f.submit %>
						<% end %>
				      </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
				      </div>
				    </div>
				  </div>
				</div>

				<!-- author and summary -->
				</div>
				<h5 class="stream_text"><%=stream['author']%></h5</br>
				<% unless stream['summary'].nil? %>
					<%= stream['summary']['content'].html_safe%>
				<% end %>
			</div>
			<% i += 1 %>
			<% break if i >= 14%>
		<% end %>
	</div>
</div
</center>